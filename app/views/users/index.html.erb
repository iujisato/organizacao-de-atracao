<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Mídia</th>
      <th>Data</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="warning">
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.time.strftime("%d %B %Y") %></td>
        <% if current_user == user %>      
        <td><%= link_to 'Editar', edit_user_path(user), class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Deletar', user, method: :delete, class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Novo Usuário', new_user_path, class: "btn btn-primary" %>