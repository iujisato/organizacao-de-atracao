<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Mídia</th>
      <th>Dia da Semana</th>
      <th>Data</th>
      <th>Hora</th>
      <th>Criado por:</th>
    </tr>
  </thead>
  <tbody>
    <% @attractions.each do |attraction| %>
      <tr class="warning">
        <td><%= attraction.name %></td>
        <td><%= attraction.media %></td>
        <td><%= attraction.time.strftime("%A") %></td>
        <td><%= attraction.time.strftime("%d %B %Y") %></td>
        <td><%= attraction.time.strftime("%H:%M") %></td>
        <td><%= attraction.user.email %></td>
        <td><%= link_to 'Editar', edit_user_attraction_path(@user, attraction), class: "btn btn-warning btn-xs" %></td>
        <% if current_user == attraction.user %>      
          <td><%= link_to 'Deletar', user_attraction_path(@user, attraction), method: :delete, class: "btn btn-danger btn-xs", data: { confirm: 'Tem certeza que deseja deletar?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Nova Atração', new_user_attraction_path(@user), class: "btn btn-primary" %>